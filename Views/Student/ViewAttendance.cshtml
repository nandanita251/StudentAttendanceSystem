@model StudentAttendanceSystem.ViewModels.StudentAttendanceDetailViewModel
@{
    ViewData["Title"] = "View Attendance";
}

<h2><i class="bi bi-calendar-check"></i> My Attendance Details</h2>
<hr />

<div class="card mb-4">
    <div class="card-header bg-primary text-white">
        <h5 class="mb-0">Filter by Date Range</h5>
    </div>
    <div class="card-body">
        <form asp-action="ViewAttendance" method="get">
            <div class="row">
                <div class="col-md-4">
                    <label class="form-label">Start Date</label>
                    <input type="date" name="startDate" class="form-control" value="@ViewBag.StartDate" />
                </div>
                <div class="col-md-4">
                    <label class="form-label">End Date</label>
                    <input type="date" name="endDate" class="form-control" value="@ViewBag.EndDate" />
                </div>
                <div class="col-md-4 d-flex align-items-end">
                    <button type="submit" class="btn btn-primary w-100">
                        <i class="bi bi-search"></i> Filter
                    </button>
                </div>
            </div>
        </form>
    </div>
</div>

<div class="row mb-4">
    <div class="col-md-12">
        <div class="card text-white bg-success">
            <div class="card-body text-center">
                <h5>Overall Attendance Percentage</h5>
                <h1 class="display-1">@Model.OverallPercentage%</h1>
            </div>
        </div>
    </div>
</div>

<h4>Subject-wise Breakdown</h4>
<div class="row">
    @foreach (var subject in Model.SubjectAttendances)
    {
        <div class="col-md-6 mb-3">
            <div class="card">
                <div class="card-header @(subject.Percentage >= 75 ? "bg-success" : "bg-danger") text-white">
                    <h5 class="mb-0">@subject.SubjectName</h5>
                </div>
                <div class="card-body">
                    <div class="row text-center">
                        <div class="col-4">
                            <h6>Total</h6>
                            <h3>@subject.TotalClasses</h3>
                        </div>
                        <div class="col-4">
                            <h6>Present</h6>
                            <h3 class="text-success">@subject.Present</h3>
                        </div>
                        <div class="col-4">
                            <h6>Percentage</h6>
                            <h3>@subject.Percentage%</h3>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    }
</div>

<div class="mt-3">
    <a asp-action="Dashboard" class="btn btn-secondary">
        <i class="bi bi-arrow-left"></i> Back to Dashboard
    </a>
</div>
