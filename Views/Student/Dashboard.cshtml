@{
    ViewData["Title"] = "Admin Dashboard";
}

<div class="fade-in-up">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2 class="display-6 fw-bold">
            <i class="bi bi-speedometer2 text-primary"></i> Admin Dashboard
        </h2>
        <div class="text-muted">
            <i class="bi bi-calendar3"></i> @DateTime.Now.ToString("MMMM dd, yyyy")
        </div>
    </div>
    <hr class="mb-4"/>

    <!-- Statistics Cards -->
    <div class="row g-4 mb-5">
        <div class="col-md-3">
            <div class="dashboard-stat-card" style="background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);">
                <div class="d-flex align-items-center">
                    <i class="bi bi-people-fill" style="font-size: 3rem; opacity: 0.3;"></i>
                    <div class="ms-auto text-end">
                        <h5 class="mb-2">Total Students</h5>
                        <h2 class="mb-0">@ViewBag.TotalStudents</h2>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-md-3">
            <div class="dashboard-stat-card" style="background: linear-gradient(135deg, #10b981 0%, #059669 100%);">
                <div class="d-flex align-items-center">
                    <i class="bi bi-person-badge-fill" style="font-size: 3rem; opacity: 0.3;"></i>
                    <div class="ms-auto text-end">
                        <h5 class="mb-2">Total Teachers</h5>
                        <h2 class="mb-0">@ViewBag.TotalTeachers</h2>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-md-3">
            <div class="dashboard-stat-card" style="background: linear-gradient(135deg, #3b82f6 0%, #2563eb 100%);">
                <div class="d-flex align-items-center">
                    <i class="bi bi-book-fill" style="font-size: 3rem; opacity: 0.3;"></i>
                    <div class="ms-auto text-end">
                        <h5 class="mb-2">Total Subjects</h5>
                        <h2 class="mb-0">@ViewBag.TotalSubjects</h2>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-md-3">
            <div class="dashboard-stat-card" style="background: linear-gradient(135deg, #f59e0b 0%, #d97706 100%);">
                <div class="d-flex align-items-center">
                    <i class="bi bi-calendar-check-fill" style="font-size: 3rem; opacity: 0.3;"></i>
                    <div class="ms-auto text-end">
                        <h5 class="mb-2">Today's Records</h5>
                        <h2 class="mb-0">@ViewBag.TodayAttendance</h2>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Quick Actions -->
    <div class="row">
        <div class="col-md-12">
            <h4 class="mb-4 fw-bold">
                <i class="bi bi-lightning-charge-fill text-warning"></i> Quick Actions
            </h4>
        </div>
    </div>

    <div class="row g-3">
        <div class="col-md-6 col-lg-3">
            <a asp-action="Students" class="text-decoration-none">
                <div class="card border-0 h-100 text-center p-4" style="background: linear-gradient(135deg, #667eea 0%, #764ba2 100%); color: white;">
                    <i class="bi bi-people-fill display-3 mb-3"></i>
                    <h5 class="fw-bold">Manage Students</h5>
                    <p class="mb-0 small opacity-75">Add, Edit, Delete Students</p>
                </div>
            </a>
        </div>

        <div class="col-md-6 col-lg-3">
            <a asp-action="Teachers" class="text-decoration-none">
                <div class="card border-0 h-100 text-center p-4" style="background: linear-gradient(135deg, #10b981 0%, #059669 100%); color: white;">
                    <i class="bi bi-person-badge-fill display-3 mb-3"></i>
                    <h5 class="fw-bold">Manage Teachers</h5>
                    <p class="mb-0 small opacity-75">Add, Edit, Delete Teachers</p>
                </div>
            </a>
        </div>

        <div class="col-md-6 col-lg-3">
            <a asp-action="Subjects" class="text-decoration-none">
                <div class="card border-0 h-100 text-center p-4" style="background: linear-gradient(135deg, #3b82f6 0%, #2563eb 100%); color: white;">
                    <i class="bi bi-book-fill display-3 mb-3"></i>
                    <h5 class="fw-bold">Manage Subjects</h5>
                    <p class="mb-0 small opacity-75">Add, Edit, Delete Subjects</p>
                </div>
            </a>
        </div>

        <div class="col-md-6 col-lg-3">
            <a asp-action="Reports" class="text-decoration-none">
                <div class="card border-0 h-100 text-center p-4" style="background: linear-gradient(135deg, #f59e0b 0%, #d97706 100%); color: white;">
                    <i class="bi bi-file-earmark-bar-graph-fill display-3 mb-3"></i>
                    <h5 class="fw-bold">View Reports</h5>
                    <p class="mb-0 small opacity-75">Generate Attendance Reports</p>
                </div>
            </a>
        </div>
    </div>
</div>
