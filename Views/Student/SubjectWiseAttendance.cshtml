@model List<StudentAttendanceSystem.ViewModels.SubjectAttendanceViewModel>
@{
    ViewData["Title"] = "Subject-wise Attendance";
}

<h2><i class="bi bi-book"></i> Subject-wise Attendance</h2>
<hr />

<div class="row">
    @foreach (var subject in Model)
    {
        <div class="col-md-6 mb-4">
            <div class="card h-100">
                <div class="card-header @(subject.Percentage >= 75 ? "bg-success" : subject.Percentage >= 60 ? "bg-warning" : "bg-danger") text-white">
                    <h4 class="mb-0">@subject.SubjectName</h4>
                </div>
                <div class="card-body">
                    <div class="row text-center mb-3">
                        <div class="col-12">
                            <h1 class="display-3 @(subject.Percentage >= 75 ? "text-success" : "text-danger")">
                                @subject.Percentage%
                            </h1>
                            <p class="text-muted">Attendance Percentage</p>
                        </div>
                    </div>
                    
                    <hr />
                    
                    <div class="row text-center">
                        <div class="col-4">
                            <h5 class="text-muted">Total</h5>
                            <h2>@subject.TotalClasses</h2>
                        </div>
                        <div class="col-4">
                            <h5 class="text-success">Present</h5>
                            <h2>@subject.Present</h2>
                        </div>
                        <div class="col-4">
                            <h5 class="text-danger">Absent</h5>
                            <h2>@subject.Absent</h2>
                        </div>
                    </div>
                    
                    @if (subject.Percentage < 75)
                    {
                        <div class="alert alert-danger mt-3">
                            <i class="bi bi-exclamation-triangle"></i> <strong>Warning:</strong> Attendance below 75%
                        </div>
                    }
                </div>
            </div>
        </div>
    }
</div>

<div class="mt-3">
    <a asp-action="Dashboard" class="btn btn-secondary">
        <i class="bi bi-arrow-left"></i> Back to Dashboard
    </a>
</div>
