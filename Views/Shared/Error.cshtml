@{
    ViewData["Title"] = "Error";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow">
                <div class="card-body text-center p-5">
                    <i class="bi bi-exclamation-triangle-fill text-danger" style="font-size: 5rem;"></i>
                    <h1 class="display-4 mt-3">Oops! Something went wrong</h1>
                    <p class="lead text-muted">We're sorry, but an error occurred while processing your request.</p>
                    <hr />
                    <p>Please try again or contact your administrator if the problem persists.</p>
                    <a asp-controller="Account" asp-action="Login" class="btn btn-primary btn-lg mt-3">
                        <i class="bi bi-house"></i> Go to Home
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>
