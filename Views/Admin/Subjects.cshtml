@model IEnumerable<StudentAttendanceSystem.Models.Subject>
@{
    ViewData["Title"] = "Manage Subjects";
}

<h2><i class="bi bi-book"></i> Manage Subjects</h2>
<hr />

<div class="mb-3">
    <a asp-action="CreateSubject" class="btn btn-info">
        <i class="bi bi-plus-circle"></i> Add New Subject
    </a>
    <a asp-action="Dashboard" class="btn btn-secondary">
        <i class="bi bi-arrow-left"></i> Back to Dashboard
    </a>
</div>

<div class="card">
    <div class="card-body">
        <table class="table table-striped table-hover">
            <thead class="table-info">
                <tr>
                    <th>Subject Code</th>
                    <th>Subject Name</th>
                    <th>Class</th>
                    <th>Teacher</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var subject in Model)
                {
                    <tr>
                        <td>@subject.SubjectCode</td>
                        <td>@subject.SubjectName</td>
                        <td>@subject.Class</td>
                        <td>@subject.Teacher?.Name</td>
                        <td>
                            <a asp-action="EditSubject" asp-route-id="@subject.SubjectId" class="btn btn-sm btn-warning">
                                <i class="bi bi-pencil"></i> Edit
                            </a>
                            <form asp-action="DeleteSubject" asp-route-id="@subject.SubjectId" method="post" class="d-inline"
                                  onsubmit="return confirm('Are you sure you want to delete this subject?');">
                                <button type="submit" class="btn btn-sm btn-danger">
                                    <i class="bi bi-trash"></i> Delete
                                </button>
                            </form>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
