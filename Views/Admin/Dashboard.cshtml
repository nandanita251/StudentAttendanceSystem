@{
    ViewData["Title"] = "Admin Dashboard";
}

<h2><i class="bi bi-speedometer2"></i> Admin Dashboard</h2>
<hr />

<div class="row mt-4">
    <div class="col-md-3 mb-3">
        <div class="card text-white bg-primary">
            <div class="card-body">
                <h5 class="card-title"><i class="bi bi-people"></i> Total Students</h5>
                <h2 class="display-4">@ViewBag.TotalStudents</h2>
            </div>
        </div>
    </div>
    <div class="col-md-3 mb-3">
        <div class="card text-white bg-success">
            <div class="card-body">
                <h5 class="card-title"><i class="bi bi-person-badge"></i> Total Teachers</h5>
                <h2 class="display-4">@ViewBag.TotalTeachers</h2>
            </div>
        </div>
    </div>
    <div class="col-md-3 mb-3">
        <div class="card text-white bg-info">
            <div class="card-body">
                <h5 class="card-title"><i class="bi bi-book"></i> Total Subjects</h5>
                <h2 class="display-4">@ViewBag.TotalSubjects</h2>
            </div>
        </div>
    </div>
    <div class="col-md-3 mb-3">
        <div class="card text-white bg-warning">
            <div class="card-body">
                <h5 class="card-title"><i class="bi bi-calendar-check"></i> Today's Attendance</h5>
                <h2 class="display-4">@ViewBag.TodayAttendance</h2>
            </div>
        </div>
    </div>
</div>

<div class="row mt-4">
    <div class="col-md-12">
        <h4>Quick Actions</h4>
        <div class="btn-group-vertical w-100" role="group">
            <a asp-action="Students" class="btn btn-outline-primary btn-lg mb-2">
                <i class="bi bi-people"></i> Manage Students
            </a>
            <a asp-action="Teachers" class="btn btn-outline-success btn-lg mb-2">
                <i class="bi bi-person-badge"></i> Manage Teachers
            </a>
            <a asp-action="Subjects" class="btn btn-outline-info btn-lg mb-2">
                <i class="bi bi-book"></i> Manage Subjects
            </a>
            <a asp-action="Reports" class="btn btn-outline-warning btn-lg">
                <i class="bi bi-file-earmark-bar-graph"></i> View Reports
            </a>
        </div>
    </div>
</div>
