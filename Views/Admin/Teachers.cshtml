@model IEnumerable<StudentAttendanceSystem.Models.Teacher>
@{
    ViewData["Title"] = "Manage Teachers";
}

<h2><i class="bi bi-person-badge"></i> Manage Teachers</h2>
<hr />

<div class="mb-3">
    <a asp-action="CreateTeacher" class="btn btn-success">
        <i class="bi bi-plus-circle"></i> Add New Teacher
    </a>
    <a asp-action="Dashboard" class="btn btn-secondary">
        <i class="bi bi-arrow-left"></i> Back to Dashboard
    </a>
</div>

<div class="card">
    <div class="card-body">
        <table class="table table-striped table-hover">
            <thead class="table-success">
                <tr>
                    <th>Name</th>
                    <th>Email</th>
                    <th>Subject</th>
                    <th>Join Date</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var teacher in Model)
                {
                    <tr>
                        <td>@teacher.Name</td>
                        <td>@teacher.Email</td>
                        <td>@teacher.Subject</td>
                        <td>@teacher.JoinDate.ToShortDateString()</td>
                        <td>
                            <a asp-action="EditTeacher" asp-route-id="@teacher.TeacherId" class="btn btn-sm btn-warning">
                                <i class="bi bi-pencil"></i> Edit
                            </a>
                            <form asp-action="DeleteTeacher" asp-route-id="@teacher.TeacherId" method="post" class="d-inline"
                                  onsubmit="return confirm('Are you sure you want to delete this teacher?');">
                                <button type="submit" class="btn btn-sm btn-danger">
                                    <i class="bi bi-trash"></i> Delete
                                </button>
                            </form>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
