@model List<StudentAttendanceSystem.ViewModels.AttendanceReportViewModel>
@{
    ViewData["Title"] = "Teacher Reports";
}

<h2><i class="bi bi-file-earmark-bar-graph"></i> Attendance Reports</h2>
<hr />

<div class="card mb-4">
    <div class="card-header bg-success text-white">
        <h5 class="mb-0">Generate Report</h5>
    </div>
    <div class="card-body">
        <form asp-action="GetReport" method="post">
            <div class="row">
                <div class="col-md-4">
                    <label class="form-label">Select Subject</label>
                    <select name="subjectId" class="form-select" required>
                        <option value="">-- Select Subject --</option>
                        @foreach (var subject in ViewBag.Subjects as List<StudentAttendanceSystem.Models.Subject>)
                        {
                            <option value="@subject.SubjectId" selected="@(ViewBag.SelectedSubject == subject.SubjectId)">
                                @subject.SubjectName (@subject.Class)
                            </option>
                        }
                    </select>
                </div>
                <div class="col-md-3">
                    <label class="form-label">Start Date (Optional)</label>
                    <input type="date" name="startDate" class="form-control" />
                </div>
                <div class="col-md-3">
                    <label class="form-label">End Date (Optional)</label>
                    <input type="date" name="endDate" class="form-control" />
                </div>
                <div class="col-md-2 d-flex align-items-end">
                    <button type="submit" class="btn btn-success w-100">
                        <i class="bi bi-search"></i> Generate
                    </button>
                </div>
            </div>
        </form>
    </div>
</div>

@if (Model != null && Model.Any())
{
    <div class="card">
        <div class="card-header bg-primary text-white">
            <h5 class="mb-0">Attendance Report - @ViewBag.SubjectName</h5>
        </div>
        <div class="card-body">
            <div class="mb-3">
                <a asp-action="ExportToExcel" asp-route-subjectId="@ViewBag.SelectedSubject" class="btn btn-success">
                    <i class="bi bi-file-earmark-excel"></i> Export to Excel
                </a>
            </div>
            
            <table class="table table-striped table-bordered">
                <thead class="table-success">
                    <tr>
                        <th>Roll No</th>
                        <th>Student Name</th>
                        <th>Class</th>
                        <th>Total Classes</th>
                        <th>Present</th>
                        <th>Absent</th>
                        <th>Percentage</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@item.RollNo</td>
                            <td>@item.StudentName</td>
                            <td>@item.Class</td>
                            <td>@item.TotalClasses</td>
                            <td class="text-success">@item.PresentClasses</td>
                            <td class="text-danger">@item.AbsentClasses</td>
                            <td>
                                <span class="badge @(item.AttendancePercentage >= 75 ? "bg-success" : "bg-danger")">
                                    @item.AttendancePercentage%
                                </span>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
}

<div class="mt-3">
    <a asp-action="Dashboard" class="btn btn-secondary">
        <i class="bi bi-arrow-left"></i> Back to Dashboard
    </a>
</div>
